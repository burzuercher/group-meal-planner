rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Helper function: Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Profile images - users can upload and update their own profile images
    match /profile-images/{filename} {
      // Anyone can read profile images (public)
      allow read: if true;

      // Any authenticated user can write profile images
      // Filename format: userId_timestamp.jpg (enforced by client code)
      allow write: if isAuthenticated();
    }

    // Menu images - generated by Cloud Functions and cached globally
    match /menu-images/{filename} {
      // Anyone can read menu images (public)
      allow read: if true;

      // Only authenticated users can create menu images
      // (Cloud Functions run with admin privileges, so this mainly applies to direct client uploads)
      allow write: if isAuthenticated();
    }

    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
